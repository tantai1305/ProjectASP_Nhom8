@model IEnumerable<ProjectASP_Nhom8.Models.SinhVien>
@using X.PagedList.Mvc.Core;
@using X.PagedList;

@{
    ViewData["Title"] = "DSSinhVien";
}

<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
    <title>DSSinhVien</title>
    <!-- Favicon-->
    @* <link rel="icon" type="image/x-icon" href="assets/favicon.ico" /> *@
    <!-- Bootstrap icons-->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link href="~/css/style_DSSV.css" rel="stylesheet" />
</head>

<body>   
    <section class="py-5">
        <div class="container px-4 px-lg-5 my-5">
            @if (TempData["ThongBaoThem"] != null)
            {
                <div id="them" class="alert alert-success">
                    @TempData["ThongBaoThem"]
                </div>
            }

            @if (TempData["ThongBaoXoa"] != null)
            {
                <div id="xoa" class="alert alert-danger">
                    @TempData["ThongBaoXoa"]
                </div>
            }

            @if (TempData["ThongBaoSua"] != null)
            {
                <div id="sua" class="alert alert-success">
                    @TempData["ThongBaoSua"]
                </div>
            }

            <script>
                // Ẩn thông báo sau 3 giây
                setTimeout(function () {
                    var them = document.getElementById("them");
                    var xoa = document.getElementById("xoa");
                    var sua = document.getElementById("sua");

                    if (them) {
                        them.style.display = "none";
                    }
                    if (xoa) {
                        xoa.style.display = "none";
                    }
                    if (sua) {
                        sua.style.display = "none";
                    }
                }, 3000);
            </script>

            <h1 class="mb-5">Danh sách sinh viên</h1>
            <div class="row gx-4 gx-lg-5 align-items-center">
                <div class="table-wrapper">
                    <div class="table-title">
                        <div class="row">
                            <div class="col-sm-6">
                                <h2>Quản Lý <b>Sinh Viên</b></h2>
                            </div>
                            <div class="col-sm-6 d-flex justify-content-end">
                                <a class="btn btn-success" data-toggle="modal" asp-action="ThemSinhVien">
                                    <i class="bi bi-pencil"></i><span> Thêm sinh viên</span>
                                </a>
                            </div>
                        </div>
                    </div>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>MSSV</th>
                                <th>Họ Tên</th>
                                <th>SĐT</th>
                                <th>Email</th>
                                <th>Tài khoản</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Mssv)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.HoTen)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Sdt)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.TaiKhoan)
                                    </td>
                                    <td>
                                        <a class="edit" data-toggle="modal" asp-action="CapNhatSinhVien" asp-route-maSV="@item.Mssv">
                                            <i class="bi bi-pencil"></i>
                                        </a>

                                        <a class="delete" data-toggle="modal" asp-action="XoaSinhVien" asp-route-maSV="@item.Mssv" onclick="return confirm('Bạn có muốn xóa?')">
                                            <i class="bi bi-trash"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    @Html.PagedListPager((IPagedList)Model, page => Url.Action("DSSinhVien",
                    new {page = page}),
                    new X.PagedList.Mvc.Core.PagedListRenderOptions
                    {
                    ContainerDivClasses = new[] {"navigation"},
                    LiElementClasses = new[] {"page-item"},
                    PageClasses = new[] {"page-link"}
                    })

                </div>
            </div>
        </div>
    </section>
</body>
</html>
