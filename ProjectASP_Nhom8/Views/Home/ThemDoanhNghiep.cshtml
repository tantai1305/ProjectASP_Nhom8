@model ProjectASP_Nhom8.Models.DoanhNghiep

@{
    ViewData["Title"] = "ThemDoanhNghiep";
}

<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<h1 class="text-center text-primary my-4">Thêm Doanh Nghiệp</h1>

@if (ViewBag.ThongBao != null)
{
    <div id="alertMessage" class="alert alert-info">
        @ViewBag.ThongBao
    </div>
}

<script>
    //ẩn thông báo sau 3 giây
    setTimeout(function () {
        var alertMessage = document.getElementById("alertMessage");
        if (alertMessage) {
            alertMessage.style.display = "none";
        }
    }, 3000);
</script>
<hr />
<div class="container">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4>Thông tin doanh nghiệp</h4>
        </div>
        <div class="card-body">
            <form asp-action="ThemDoanhNghiep">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <div class="mb-3">
                    <label asp-for="MaDn" class="form-label"></label>
                    <input asp-for="MaDn" class="form-control" placeholder="Nhập mã doanh nghiệp" />
                    <span asp-validation-for="MaDn" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="TenDn" class="form-label"></label>
                    <input asp-for="TenDn" class="form-control" placeholder="Nhập tên doanh nghiệp" />
                    <span asp-validation-for="TenDn" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="DiaChi" class="form-label"></label>
                    <input asp-for="DiaChi" class="form-control" placeholder="Nhập địa chỉ doanh nghiệp" />
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>

                <div class="d-flex justify-content-between">
                    <a asp-action="DSDoanhNghiepAdmin" class="btn btn-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Quay lại
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="bi bi-save"></i> Thêm
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<style>
    /* Custom styles for CapNhatDoanhNghiep page */
    h1 {
        font-weight: bold;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.3);
    }

    .card {
        border-radius: 10px;
        overflow: hidden;
    }

    .card-header {
        font-size: 1.25rem;
        font-weight: 600;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 5px;
    }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
        }

    .btn-primary {
        background-color: #007bff;
        border-color: #007bff;
        transition: background-color 0.2s ease-in-out;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            border-color: #004085;
        }

    .btn-secondary {
        background-color: #6c757d;
        border-color: #6c757d;
    }

        .btn-secondary:hover {
            background-color: #545b62;
            border-color: #343a40;
        }

</style>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
