@model IEnumerable<ProjectASP_Nhom8.Models.ChuyenThamQuan>
@using X.PagedList.Mvc.Core;
@using X.PagedList;
@{
    ViewData["Title"] = "DSChuyenThamQuanHienTai";
    //     var maSV = HttpContextAccessor.HttpContext.Session.GetString("MaSV");
}
@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor
@{
    var userRole = HttpContextAccessor.HttpContext.Session.GetString("UserRole");
}
<head>
    <title>Home</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/style_trangchu.css">
    <link rel="stylesheet" href="~/css/style_DSDaDangKy.css">
    <style>
        .custom-table {
            width: 90%;
            margin: 20px auto;
            border-collapse: collapse;
            background-color: #ffffff;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            overflow: hidden;
        }

            .custom-table thead {
                background-color: #3366ff !important; /* Ghi đè Bootstrap */
                color: white !important;
                font-weight: bold;
            }

            .custom-table th,
            .custom-table td {
                padding: 15px;
                text-align: left;
                border: 1px solid #ddd;
            }

            .custom-table tbody tr:nth-child(odd) {
                background-color: #f9f9f9;
            }

            .custom-table tbody tr:nth-child(even) {
                background-color: #e6f3ff;
            }

            .custom-table tbody tr:hover {
                background-color: #cce7ff;
                cursor: pointer;
            }
    </style>
</head>

<body>
    <!-- Navbar & Hero Start -->
    <div class="container-fluid nav-bar p-0">
        <nav class="navbar navbar-expand-lg navbar-light bg-white px-4 px-lg-5 py-3 py-lg-0">
            <a href="" class="navbar-brand p-0">
                <img src="/images/logo.png" alt="TDC" width="50%" />
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse">
                <span class="fa fa-bars"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse" style="margin-left:-8%;">
                <div class="navbar-nav py-0">
                    <a class="nav-item nav-link active" style="font-size:1.5rem" asp-controller="Home" asp-action="Trangchu">Trang Chủ</a>
                    <a class="nav-item nav-link" style="font-size:1.5rem" asp-controller="Home" asp-action="DSDoanhNghiep">Doanh Nghiệp</a>
                    <a class="nav-item nav-link" style="font-size:1.5rem" asp-controller="Home" asp-action="DSChuyenThamQuanHienTai">Tham Quan</a>
                    <a class="nav-item nav-link" style="font-size:1.5rem" asp-controller="Home" asp-action="DSDangKyTheoMaSV">Danh sách đăng ký</a>
                    <a href="#footer" class="nav-item nav-link" style="font-size:1.5rem">Liên Hệ</a>
                </div>
            </div>
            @if (userRole != null)
            {
                <form action="/logout" class="signin-form" method="post">
                    <div class="form-group">
                        <button type="submit" class="form-control btn btn-primary submit px-3">Đăng xuất</button>
                    </div>
                </form>
            }
            else
            {
                <a href="" class="btn btn-primary border-secondary rounded-pill py-2 px-4 px-lg-3 mb-3 mb-md-3 mb-lg-0" asp-controller="Home" asp-action="Index">Đăng nhập</a>
            }

        </nav>
    </div>
    <h1 style="text-align: center; font-family: Arial, sans-serif; color: #333; margin-top:3%">Danh sách chuyến tham quan</h1>
    @* @if (TempData["ThongBaoXoa"] != null)
    {
    <div class="alert alert-success">
    @TempData["ThongBaoXoa"]
    </div>
    } *@
    @if (TempData["CanhBao"] != null)
    {
        <div id="alertMessage" class="alert alert-warning">
            @TempData["CanhBao"]
        </div>
    }
    @if (TempData["ThongBaoThem"] != null)
    {
        <div id="them" class="alert alert-success">
            @TempData["ThongBaoThem"]
        </div>
    }
    @if (TempData["ThongBao"] != null)
    {
        <div id="tb" class="alert alert-warning">
            @TempData["ThongBao"]
        </div>
    }
    @if (TempData["VuotGioiHan"] != null)
    {
        <div id="vuotgh" class="alert alert-warning">
            @TempData["VuotGioiHan"]
        </div>
    }
    @if (TempData["HetHan"] != null)
    {
        <div id="hetHan" class="alert alert-warning">
            @TempData["HetHan"]
        </div>
    }
    <script>
        // Ẩn thông báo sau 3 giây
        setTimeout(function () {
            var them = document.getElementById("them");
            var canhBao = document.getElementById("alertMessage");
            var thongBao = document.getElementById("tb");
            var vuotGH = document.getElementById("vuotgh");
            var hetHan = document.getElementById("hetHan");
            if (them) {
                them.style.display = "none";
            }
            if (canhBao) {
                canhBao.style.display = "none";
            }
            if (thongBao) {
                thongBao.style.display = "none";
            }
            if (vuotGH) {
                vuotGH.style.display = "none";
            }
            if (hetHan) {
                hetHan.style.display = "none";
            }
        }, 3000);
    </script>

    <table class="custom-table">
        <thead>
            <tr>
                <th>
                    Tên doanh nghiệp
                </th>

                <th>
                    Mô tả
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NgayToChuc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ThoiGianBatDau)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ThoiGianKetThuc)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoLuongNguoiThamGia)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaDnNavigation.TenDn)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MoTa)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.NgayToChuc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThoiGianBatDau)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ThoiGianKetThuc)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.SoLuongNguoiThamGia)
                    </td>

                    @*  <td>
                <a asp-action="Edit" asp-route-id="@item.MaThamQuan">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaThamQuan">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaThamQuan">Delete</a>
                </td> *@
                    <td>
                        <form method="post" asp-action="DangKyChuyenThamQuan" asp-controller="Home">
                            <input type="hidden" name="MaThamQuan" value="@item.MaThamQuan" />
                            <button class="btn btn-success" data-toggle="modal" type="submit">
                                <i class="bi bi-pencil"></i>
                            </button>
                        </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div style="margin-left:3%;">
        @Html.PagedListPager((IPagedList)Model, page => Url.Action("DSChuyenThamQuanHienTai",
                 new { page = page }),
                 new X.PagedList.Mvc.Core.PagedListRenderOptions
        {
            ContainerDivClasses = new[] { "navigation" },
            LiElementClasses = new[] { "page-item" },
            PageClasses = new[] { "page-link" }
        })
    </div>
